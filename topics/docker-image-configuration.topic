                <code-block lang="shell" prompt="$">
                    docker run jetbrains/qodana-&lt;linter&gt; -h
                </code-block>
            </tab>
            <tab title="Qodana CLI" group-key="qodana-cli">
                <code-block lang="shell" prompt="$">
                    qodana scan -h
                </code-block>
            </tab>
        </tabs>

